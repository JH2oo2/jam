<div class="container" data-controller="test">
  <%# <i class="fa-regular fa-envelope" id="email-icon"></i> %>
  <div class="centered-content">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs custom-form-style" id="page1" >
        <%= f.input :name,
                    required: true,
                    label: "What's your first name?",
                    label_html: { class: "first-name" },
                    autofocus: true,
                    input_html: { class: "text-size", autocomplete: "name" },
                    placeholder: "First name"
                    %>
      </div>

      <div class="d-none" class="form-inputs custom-form-style" >
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "What's your email?",
                    label_html: { class: "d-none" },
                    input_html: { class: "text-size", autocomplete: "email" },
                    placeholder: "email@example.com"
                    %>
      </div>

      <div class="form-inputs custom-form-style" style="display: none;">
        <%= f.input :birth_year,
                    # as: :string,
                    required: true,
                    autofocus: true,
                    label: "What's your date of birth?",
                    label_html: { class: "text-size", autocomplete: "birth_year" },
                    input_html: { data: { controller: "flatpickr" } }
                    %>
      </div>
      <div class="form-inputs custom-form-style" style="display: none;">
        <%= f.input :password,
                    required: true,
                    label: "Create Password",
                    label_html: { class: "password-size" },
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Reenter Password",
                    label_html: { class: "password-size" },
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions" style="display: none;">
        <%= f.button :submit %>
      </div>

    <% end %>
  <i class="fa-solid fa-forward" style="color: #83EBEC;" id="next-icon"></i>
</div>
