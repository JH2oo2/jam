<%# <div class="cards" data-controller="hide-cards"> %>
<% unless @users[-1] == user %>
      <div data-user="<%= user.id %>" class="users-container">
        <div class="card" data-hide-cards-target="cards">

          <div id="img-artist">
            <img src="https://extra-images.akamaized.net/image/0a/o/2018/12/25/0a5af3a0210b5d3e98f7ea85b67a2fb3_md.jpg" alt="Favourite Artist">
          </div>

          <div class="user-image-wrapper">
            <%= cl_image_tag user.photo.key %>
          </div>
          
          <div class="profile-name">
            <%= user.name %>
          </div>

          <div class="swipe-btns">

            <div class="swipe-left">
              <form action="/users/<%= user.id %>/dislike" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <button type="submit">
                  <i class="fa-solid fa-forward fa-rotate-180" style="color: black; opacity: 0.7;"></i>
                </button>
              </form>
            </div>

            <div class="swipe-right">
              <form action="/users/<%= user.id %>/like" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <button type="submit">
                  <i class="fa-solid fa-forward" style="color: black; opacity:0.7;" ></i>
                </button>
              </form>
            </div>

          </div>

          <h6 class="prompt">On Repeat</h6>
          <div class="card-section">
            <%= user.on_repeat %>
          </div>

          <h6 class="prompt">Theme Song</h6>
          <div class="card-section">
            <%= user.all_time_favorite %>
          </div>

          <h6 class="prompt">Go To Karaoke</h6>
          <div class="card-section">
            <%= user.go_to_karaoke %>
          </div>
         </div>
        </div>
      <% else %>
         <h1>No more possible matches, back to home</h1>
    <% end %>