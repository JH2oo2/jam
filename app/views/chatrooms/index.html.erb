<div class="chatrooms-container">


  <h1>My matches</h1>
    <%# view all your matches current posts %>
  <div class="card" id = "card-in">
      <% @chatrooms.each do |chatroom| %>
        <div class="socials">
          <% @socials.each do |social| %>
            <% social.keys.each do |user| %>
              <%= link_to user.name, user_socials_path(user) %>
            <% end %>
          <% end %>
        </div>

  <h1 class="my-matches">My matches</h1>
  <div class="card" id = "card-in">
      <% @chatrooms.each do |chatroom| %>
        <div class="recipient-info">
          <% if User.find(chatroom.swipe.swiper_id) == current_user %>
            <%= cl_image_tag User.find(chatroom.swipe.swipee_id).photos[0].key, class: 'recipient-img' %>
            <%= link_to User.find(chatroom.swipe.swipee_id).name, chatroom_path(chatroom) %>
          <% else %>
          <%= cl_image_tag User.find(chatroom.swipe.swipee_id).photos[0].key, class: 'recipient-img' %>
            <%= link_to User.find(chatroom.swipe.swiper_id).name, chatroom_path(chatroom) %>
          <% end %>
          <% if !chatroom.messages.empty? %>
            <p class='last-message'>
              <%=  chatroom.messages.last.content.first(20) %>
            </p>
          <% end %>
        </div>

      <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
